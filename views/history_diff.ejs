<section class="section">
  <div class="container-page grid gap-6">
    <div class="card">
      <div class="card-header">
        <h1 class="text-lg font-semibold">Consent diff — <%= study.title %></h1>
      </div>

      <p class="card-sub">
        Comparing <span class="chip">v<%= v1 %></span> and <span class="chip">v<%= v2 %></span>.
      </p>

      <div class="muted mb-2">
        v<%= v1 %> saved <%= new Date(c1.createdAt).toLocaleString() %>
        <% if (c1.withdrawnAt) { %> — withdrawn <%= new Date(c1.withdrawnAt).toLocaleString() %><% } %>
        &nbsp; | &nbsp;
        v<%= v2 %> saved <%= new Date(c2.createdAt).toLocaleString() %>
        <% if (c2.withdrawnAt) { %> — withdrawn <%= new Date(c2.withdrawnAt).toLocaleString() %><% } %>
      </div>

      <div class="overflow-x-auto">
        <table class="w-full" style="border-collapse:collapse;border:1px solid var(--line);border-radius:12px;overflow:hidden">
          <thead>
            <tr style="background:#F1F5F9">
              <th class="p-2 text-left">Category</th>
              <th class="p-2 text-left">v<%= v1 %></th>
              <th class="p-2 text-left">v<%= v2 %></th>
              <th class="p-2 text-left">Change</th>
            </tr>
          </thead>
          <tbody>
          <% rows.forEach(r => { %>
            <tr style="border-top:1px solid var(--line)">
              <td class="p-2"><strong><%= r.name %></strong></td>
              <td class="p-2"><%= r.a %></td>
              <td class="p-2"><%= r.b %></td>
              <td class="p-2"><%= r.changed ? 'Changed' : '—' %></td>
            </tr>
          <% }) %>
          </tbody>
        </table>
      </div>

      <p class="mt-3">
        <a class="btn" href="/s/<%= study.slug %>/history">← Back to history</a>
        <a class="btn" href="/s/<%= study.slug %>">Study</a>
      </p>
    </div>
  </div>
</section>
