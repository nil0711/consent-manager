<section>
  <h1>Create study</h1>
  <% if (error) { %><p class="error"><%= error %></p><% } %>

  <form method="post" action="/researcher/studies/new">
    <label>Title <input name="title" required></label>
    <label>Summary <textarea name="summary" required></textarea></label>
    <label>Purpose <textarea name="purpose" required></textarea></label>
    <label>Contact email <input name="contactEmail" type="email" required></label>
    <label>Default retention days (optional) <input name="retentionDays" type="number" min="0"></label>

    <fieldset>
      <legend>Status</legend>
      <select name="status">
        <option value="public">public</option>
        <option value="invite">invite</option>
        <option value="draft">draft</option>
      </select>
      <p class="help">Invite mode uses a join code; draft is visible only to you.</p>
    </fieldset>

    <label>Join code (optional)
      <input name="joinCode" placeholder="Leave blank to auto-generate for invite">
    </label>

    <fieldset>
      <legend>Data categories (3 quick defaults)</legend>
      <label>Category 1 name <input name="c1_name" value="Email"></label>
      <label>Category 1 description <input name="c1_desc"></label>
      <label><input type="checkbox" name="c1_req"> Required</label>

      <label>Category 2 name <input name="c2_name" value="Usage Logs"></label>
      <label>Category 2 description <input name="c2_desc"></label>
      <label><input type="checkbox" name="c2_req"> Required</label>

      <label>Category 3 name <input name="c3_name" value="Accelerometer"></label>
      <label>Category 3 description <input name="c3_desc"></label>
      <label><input type="checkbox" name="c3_req"> Required</label>
    </fieldset>

    <button type="submit">Create</button>
    <a href="/researcher">Cancel</a>
  </form>
</section>
